[Unit]
Description = pulsar

[Service]
Type = forking
PIDFile = {{ venv_path }}/paster.pid
WorkingDirectory = {{ venv_path }}
ExecStart = {{ venv_path }}/exec.sh pulsar --daemon
ExecStop = {{ venv_path }}/exec.sh pulsar --stop-daemon
User = pulsar
Group = pulsar
Restart = on-failure
RestartSec = 10
TimeoutStartSec = 10
TimeoutStopSec = 12

[Install]
WantedBy = multi-user.target
